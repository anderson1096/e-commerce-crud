extends layout.pug

block hero
    section.hero.is-dark.is-bold
        .hero-body
            .container
                h1.title= title
                h2.subtitle Find the best products a the best price

block content
    .container(style="flex: 1; padding: 50px 0;")
        .columns.is-multiline

        each product in products
            .column.is-one-quarter
                .card
                    .card-image
                .card-content
                    h1.title= product.name
                    .button.is-fullwidth.is-primary
                        span.icon
                            i.fas.fa-shopping-cart
                        span Add to cart
                        strong= `${product.price} USD`
                    